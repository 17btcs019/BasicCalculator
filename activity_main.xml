<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tvControl"
        android:layout_width="376dp"
        android:layout_height="39dp"

        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="279dp"
        android:layout_marginEnd="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginBottom="56dp"
        android:textColor="@android:color/darker_gray"
        android:textSize="25sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button4"
        android:layout_width="100dp"
        android:layout_height="58dp"
        android:layout_below="@+id/button7"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="7dp"
        android:layout_marginLeft="7dp"

        android:layout_marginTop="-1dp"
        android:text="4" />

    <Button
        android:id="@+id/button5"
        android:layout_width="100dp"
        android:layout_height="58dp"
        android:layout_alignTop="@+id/button4"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="1dp"
        android:layout_toEndOf="@+id/button4"
        android:layout_toRightOf="@+id/button4"
        android:text="5" />

    <Button
        android:id="@+id/button6"
        android:layout_width="100dp"
        android:layout_height="58dp"
        android:layout_alignBottom="@+id/button5"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginBottom="0dp"
        android:layout_toEndOf="@+id/button5"
        android:layout_toRightOf="@+id/button5"
        android:text="6" />

    <Button
        android:id="@+id/button1"
        android:layout_width="100dp"
        android:layout_height="58dp"
        android:layout_below="@+id/button4"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="7dp"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="-1dp"
        android:text="1" />

    <Button
        android:id="@+id/button2"
        android:layout_width="100dp"
        android:layout_height="58dp"
        android:layout_alignTop="@+id/button1"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="1dp"
        android:layout_toEndOf="@+id/button1"
        android:layout_toRightOf="@+id/button1"
        android:text="2" />

    <Button
        android:id="@+id/button3"
        android:layout_width="100dp"
        android:layout_height="58dp"
        android:layout_alignTop="@+id/button1"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/button2"
        android:layout_toRightOf="@+id/button2"
        android:text="3" />

    <Button
        android:id="@+id/buttonmul"
        android:layout_width="100dp"
        android:layout_height="58dp"
        android:layout_alignTop="@+id/button6"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/button6"
        android:layout_toRightOf="@+id/button6"
        android:text="*" />

    <Button
        android:id="@+id/buttonadd"
        android:layout_width="100dp"
        android:layout_height="58dp"
        android:layout_alignBottom="@+id/button3"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginBottom="0dp"
        android:layout_toEndOf="@+id/button3"
        android:layout_toRightOf="@+id/button3"
        android:text="+" />

    <Button
        android:id="@+id/buttonclear"
        android:layout_width="100dp"
        android:layout_height="58dp"
        android:layout_below="@+id/button1"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="7dp"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="2dp"
        android:text="clear" />

    <Button
        android:id="@+id/buttonequ"
        android:layout_width="100dp"
        android:layout_height="58dp"
        android:layout_alignBottom="@+id/button0"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginBottom="0dp"
        android:layout_toEndOf="@+id/button0"
        android:layout_toRightOf="@+id/button0"
        android:text="=" />

    <Button
        android:id="@+id/buttonsub"
        android:layout_width="100dp"
        android:layout_height="58dp"
        android:layout_alignBottom="@+id/buttonequ"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginBottom="0dp"
        android:layout_toEndOf="@+id/buttonequ"
        android:layout_toRightOf="@+id/buttonequ"
        android:text="-" />

    <Button
        android:id="@+id/button0"
        android:layout_width="100dp"
        android:layout_height="58dp"
        android:layout_alignTop="@+id/buttonclear"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/buttonclear"
        android:layout_toRightOf="@+id/buttonclear"
        android:text="0" />

    <Button
        android:id="@+id/button7"
        android:layout_width="100dp"
        android:layout_height="58dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="7dp"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="342dp"
        android:text="7" />

    <Button
        android:id="@+id/button8"
        android:layout_width="100dp"
        android:layout_height="58dp"
        android:layout_alignTop="@+id/button7"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="-349dp"
        android:layout_toEndOf="@+id/button7"
        android:layout_toRightOf="@+id/button7"
        android:text="8" />

    <Button
        android:id="@+id/button9"
        android:layout_width="100dp"
        android:layout_height="58dp"
        android:layout_alignTop="@+id/button8"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/button8"
        android:layout_toRightOf="@+id/button8"
        android:text="9" />

    <Button
        android:id="@+id/buttondiv"
        android:layout_width="100dp"
        android:layout_height="58dp"
        android:layout_alignTop="@+id/button9"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/button9"
        android:layout_toRightOf="@+id/button9"
        android:text="/" />

    <TextView
        android:id="@+id/tvResult"
        android:layout_width="407dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/tvControl"
        android:layout_alignBottom="@+id/tvControl"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="-71dp"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="62dp"
        android:textColor="@color/colorPrimary"
        android:textSize="40sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvDisplay"
        android:layout_width="148dp"
        android:layout_height="37dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="155dp"
        android:layout_marginEnd="253dp"
        android:layout_marginRight="253dp"
        android:text="Result:"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="30sp"
        android:textStyle="bold" />


</RelativeLayout>